.grid-x.grid-padding-x
  .cell.small-12.medium-9.large-6
    = simple_form_for @rebel do |f|
      - if f.object.errors.any?
        .warning.callout
          | Oups, impossible d'enregistrer vos infos pour les raisons suivantes:
          br
          ul
          - f.object.errors.messages.values.flatten.each do |msg|
            li = msg

      / Set local group to 'Namur'
      = f.input :local_group_id,
                as: :hidden,
                input_html: { value: 1 },
                label: ""

      / Set local group to 'Namur'
      = f.input :language,
                as: :hidden,
                input_html: { value: "fr" },
                label: ""

      = f.input :name,
                label: "Pseudo",
                placeholder: "Pseudo",
                required: true

      = f.input :email,
                as: :email,
                label: "Adresse email",
                placeholder: "Adresse email",
                required: true

      = f.input :notes,
                as: :text,
                input_html: { rows: 5 },
                label: "Quelles sont vos compétences? Comment pouvez-vous aider Extinction Rebellion?",
                required: false

      = f.input :consent,
                as: :boolean,
                label: "Je donne mon accord pour qu'Extinction Rebellion Belgium me contacte en utilisant les coordonnées fournies via ce formulaire",
                wrapper: :foundation_checkbox

      = f.button :submit,
                 "Je rejoins la rébellion"
